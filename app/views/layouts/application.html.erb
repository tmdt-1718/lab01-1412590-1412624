<html lang="en" class="no-js">

<head>

  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700' rel='stylesheet' type='text/css'>

  <link rel="stylesheet" href="css/reset.css">
  <!-- CSS reset -->
  <link rel="stylesheet" href="css/style.css">
  <!-- Resource style -->
  <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag('app/assets/javascripts/welcome/main.js') %>
          <%= javascript_include_tag('app/assets/javascripts/welcome/modernizr.js') %>
            <title>Responsive Sidebar Navigation | CodyHouse</title>
</head>

<body>
  <header class="cd-main-header">
    <div class="cd-search is-hidden">
      <form action="#0">
        <input type="search" placeholder="Search...">
      </form>
    </div>
    <!-- cd-search -->
    <a href="#0" class="cd-nav-trigger">Menu<span></span></a>

    <nav class="cd-nav">
      <ul class="cd-top-nav">
        <li><a href="#0">Home</a></li>
        <li><a href="#0">Albums</a></li>
        <li><a href="#0">About</a></li>
        <li><a href="#0">Blogs</a></li>
        <li class="has-children account">
          <a href="#0">             
              
              <%= image_tag("app/assets/images/cd-avatar.png", :alt=>"avatar")  %>
              Account
            </a>
          <ul>

            <li><a href="#0">My Account</a></li>
            <li><a href="#0">Edit Account</a></li>
            <li><a href="#0">Logout</a></li>
          </ul>
        </li>
      </ul>
    </nav>
  </header>
  <!-- .cd-main-header -->

  <main class="cd-main-content">
    <nav class="cd-side-nav">
      <ul>
        <li class="cd-label">Main</li>
        <li class="has-children overview">
          <a href="#0">Overview</a>

          <ul>
            <li><a href="#0">All Blog</a></li>
            <li><a href="#0">Blog 1</a></li>
            <li><a href="#0">Blog 2</a></li>
          </ul>
        </li>
        <li class="has-children notifications active">
          <a href="#0">Notifications<span class="count">3</span></a>
          <ul>
            <li><a href="#0">All Notifications</a></li>
            <li><a href="#0">Friends</a></li>
            <li><a href="#0">Other</a></li>
          </ul>
        </li>

        <li class="has-children comments">
          <a href="#0">Comments</a>

          <ul>
            <li><a href="#0">All Comments</a></li>
            <li><a href="#0">Edit Comment</a></li>
            <li><a href="#0">Delete Comment</a></li>
          </ul>
        </li>
      </ul>

      <ul>
        <li class="cd-label">Secondary</li>        
        <li class="has-children images">
          <a href="#0">Images</a>

          <ul>
            <li><a href="#0">All Images</a></li>
            <li><a href="#0">Post Image</a></li>
          </ul>
        </li>

        <li class="has-children users">
          <a href="#0">Users</a>
          <ul>
            <li><a href="#0">All Users</a></li>
            <li><a href="#0">Edit User</a></li>
            <li><a href="#0">Add User</a></li>
          </ul>
        </li>
      </ul>

      <ul>
        <li class="cd-label">Action</li>
        <li class="action-btn"><a href="#0">+ Button</a></li>
      </ul>
    </nav>

    <div class="content-wrapper">
      <!-- content here -->
      <%= yield %>
    </div>
    <!-- .content-wrapper -->
  </main>
  <!-- .cd-main-content -->
</body>

</html>