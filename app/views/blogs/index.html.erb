<h1>BLOGS</h1>
<div class="row">
<div class="container">
<% @blogs.each do |blog| %>
    <div class="card border-secondary mb-3" style="width: auto;">
        <img class="card-img-top" style="height: 300px; width: 100%; display: block;" src="<%= blog.thumbnail%>"
            alt="Card image cap">
        <div class="card-body">
            <h3 class="card-title"><%= blog.title%></h3>
            <p class="card-text"><%= blog.text%></p>
            <a href="/blogs/<%= blog.id%>" class="btn btn-primary">Go blog</a>
        </div>    
    </div>
    <% end %>
</div>
</div>